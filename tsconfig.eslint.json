{
	// extend your base config so you don't have to redefine your compilerOptions
	"extends": "./tsconfig.json",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"test/**/*.test.ts"
	],
	"exclude": ["node_modules/**"]
}
